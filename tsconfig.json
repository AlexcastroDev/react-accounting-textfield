{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "jsx": "react",
    "declaration": true,
    "declarationDir": "types",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "emitDeclarationOnly": true,
  },
  "exclude": [
    "node_modules", 
    "lib", 
    "src/tests/**/*.ts",
    "src/**/**/*.test.ts",
    "src/**/**/*.stories.tsx",
    "src/**/**/*.stories.ts",
    "src/tests/**/*.tsx",
  ]
}
